<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sanya.dabappy.sc5">


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/table1"
        android:layout_alignStart="@+id/table1"
        android:textAlignment="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="textNoSuggestions|none|number|numberDecimal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter Number"
        android:id="@+id/textViewEN"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true" />

    <GridLayout
        android:layout_width="250dp"
        android:layout_height="330dp"
        android:rowCount="5"
        android:columnCount="5"
        android:id="@+id/table1"
        android:layout_alignParentBottom="true"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentRight="false"
        android:layout_alignRight="@+id/textViewEN">

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="1"
            android:id="@+id/button1"
            android:layout_row="0"
            android:layout_column="0"
            android:clickable="false"
            android:textColor="#ffffff"
            android:background="#c3c3c3"
            android:layout_marginTop="1dp"
            android:layout_margin="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="2"
            android:id="@+id/button2"
            android:layout_row="0"
            android:layout_column="1"
            android:textColor="#ffffff"
            android:background="#c3c3c3"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_margin="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="3"
            android:id="@+id/button3"
            android:layout_row="0"
            android:layout_column="2"
            android:textColor="#ffffff"
            android:background="#c3c3c3"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_margin="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="4"
            android:id="@+id/button4"
            android:layout_row="1"
            android:layout_column="0"
            android:textColor="#ffffff"
            android:background="#c3c3c3"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_margin="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="5"
            android:id="@+id/button5"
            android:layout_row="1"
            android:layout_column="1"
            android:textColor="#ffffff"
            android:background="#c3c3c3"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_margin="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="6"
            android:id="@+id/button6"
            android:layout_row="1"
            android:layout_column="2"
            android:textColor="#ffffff"
            android:background="#c3c3c3"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_margin="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="7"
            android:id="@+id/button7"
            android:layout_row="2"
            android:layout_column="0"
            android:textColor="#ffffff"
            android:background="#c3c3c3"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_margin="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="8"
            android:id="@+id/button8"
            android:layout_row="2"
            android:layout_column="1"
            android:textColor="#ffffff"
            android:background="#c3c3c3"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_margin="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="9"
            android:id="@+id/button9"
            android:layout_row="2"
            android:layout_column="2"
            android:textColor="#ffffff"
            android:background="#c3c3c3"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_margin="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/buttonb1"
            android:layout_row="3"
            android:layout_column="0"
            android:textColor="#ffffff"
            android:background="#c3c3c3"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_margin="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="0"
            android:id="@+id/button0"
            android:layout_row="3"
            android:layout_column="1"
            android:textColor="#ffffff"
            android:background="#c3c3c3"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:clickable="false"
            android:layout_margin="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/buttonb2"
            android:layout_row="3"
            android:layout_column="2"
            android:textColor="#ffffff"
            android:background="#c3c3c3"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_margin="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp" />

    </GridLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/table1"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/table1"
        android:layout_toEndOf="@+id/table1"
        android:layout_marginLeft="4dp">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="37dp"
            android:text="Find"
            android:id="@+id/buttonF"
            android:layout_row="0"
            android:layout_column="2"
            android:textColor="#ffffff"
            android:background="#c3c3c3"
            android:layout_marginLeft="0dp"
            android:layout_gravity="right"
            android:layout_marginTop="1dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:text="Green Book"
            android:id="@+id/buttonG"
            android:layout_row="0"
            android:layout_column="2"
            android:textColor="#ffffff"
            android:background="#21b41f"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="2dp"
            android:layout_gravity="right"
            android:onClick="sendMessageG"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:text="PTL Book"
            android:id="@+id/buttonPTL"
            android:layout_row="0"
            android:layout_column="2"
            android:textColor="#ffffff"
            android:background="#1a49c0"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="2dp"
            android:layout_gravity="right" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:text="Purple Book"
            android:id="@+id/buttonP"
            android:layout_row="0"
            android:layout_column="2"
            android:textColor="#ffffff"
            android:background="#8b44d3"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="2dp"
            android:layout_gravity="right" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:text="Orange Book"
            android:id="@+id/buttonO"
            android:layout_row="0"
            android:layout_column="2"
            android:textColor="#ffffff"
            android:background="#df920d"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="2dp"
            android:layout_gravity="right" />

    </LinearLayout>

</RelativeLayout>
